generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nom       String
  telephone String
  hotel     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  pointages Pointage[]
  
  @@map("users")
}

model Pointage {
  id     String @id @default(cuid())
  date   String
  userId String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  buses BusEntry[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("pointages")
}

model BusEntry {
  id         String @id @default(cuid())
  matricule  String
  rotations  Int    @default(1)
  pointageId String
  
  pointage Pointage @relation(fields: [pointageId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("bus_entries")
}


model pointage_employe {
  id        String   @id @default(cuid())
  nom       String
  telephone String
  hotel     String
  type      String   // "debut" ou "fin"
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  @@map("pointage_employe")
}
